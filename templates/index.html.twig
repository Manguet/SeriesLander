{% extends 'base.html.twig' %}

{% block title %}Bienvenu sur SeriesLander!{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">Bienvenue !</h1>
    {% if app.user %}
        <p class="text-center mb-5">Qui Ãªtes-vous ?</p>
        <div class="container mt-5 d-flex justify-content-center index">
            {% for subUser in subUsers %}
            <a href="{{ path('app_profil', {'name' : subUser.name}) }}" class="text-decoration-none">
                <div class="card mb-3" style="max-width: 18rem;">
                    <div class="card-header text-center">{{ subUser.name }}</div>
                    <div class="card-body">
                        {% if subUser.image %}
                            <img src="{{ subUser.image.url }}" alt="{{ subUser.image.name }}" class="card-img">
                        {% endif %}
                    </div>
                </div>
            </a>
            {% endfor %}
            <a href="{{ path('sub_user_new') }}" class="text-decoration-none">
                <div class="card mb-3" style="max-width: 18rem;">
                    <div class="card-header text-center">
                        Ajouter un Profil
                    </div>
                    <div class="card-body">
                        <img src="{{ asset('build/images/add.png') }}" alt="Ajouter un Profil" class="card-img plus">
                    </div>
                </div>
            </a>
        </div>
    {% endif %}
{% endblock %}
