{% extends 'base.html.twig' %}

{% block title %}{{ subUser.name }}{% endblock %}

{% block body %}
    <div class="mt-5 mr-5 mb-5 ml-5">

        <h1 class="text-center">{{ subUser.name }}</h1>

        <div class="row profil">
            <div class="col-md-6">
                <h2 class="mb-3"><u>Informations Personnelles</u> :</h2>
                <p>Nom du Profil : {{ user.username }}</p>
                <p>Mot de Passe : *****</p>
            </div>

            <div class="col-md-6 d-flex justify-content-end">
                <div class="d-flex flex-column box-profil">
                    <img src="{{ image.url }}" alt="{{ image.name }}" class="img-size">
                    <a href="{{ path('app_profil_edit') }}" class="text-center">
                        <i class="fas fa-chevron-right"></i>
                            Changer d'image
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </div>
            </div>

        </div>
    </div>
{% endblock %}